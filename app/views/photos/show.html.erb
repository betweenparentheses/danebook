<section class="container" id="information-pane">
  <header class="row">
    <div class="col-md-offset-2 col-md-8 about-header">
      <h2>Photos</h2>
    </div>
  </header>

  <div class = "row">

    <div class = "col-md-8">

      <div class = "row">
        <div class = "col-md-12">
          <%=image_tag @photo.image.url(:large) %>
        </div>
      </div>
      <!-- action links -->
      <div class = "row">
        <div class = "col-md-12">
          <%= render partial: "photo_settings" if @user == current_user %>
        </div>
      </div>
    </div>

    <%= render partial: "photo_info" %>


  </div> <!-- photo-field -->
</section> <!--information-pane -->

