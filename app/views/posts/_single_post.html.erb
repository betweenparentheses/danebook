<article class = "row">
  <header class = "col-md-12">
    <div class ="col-md-2">
      <%= image_tag "user_silhouette_generic.gif" %>
    </div>
    <div class="col-md-10">
      <p><%= link_to post.user.name, post.user %></p>
      <p class = "date-posted">Posted on <%= post.created_at %></p>
    </div>
  </header>

  <section class = "col-md-12 post-body">
    <p><%= post.body %></p>
  </section>

  <%= render partial: "likes_section", locals: {post: post} %>

</article><!--post 1-->
