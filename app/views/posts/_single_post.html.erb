<article class = "row">
  <header class = "col-md-12">
    <div class ="col-md-2">
      <%= image_tag "user_silhouette_generic.gif" %>
    </div>
    <div class="col-md-10">
      <p><%= link_to post.user.name, post.user %></p>
      <p class = "date-posted">Posted on <%= post.created_at %></p>
    </div>
  </header>

  <section class = "col-md-12 post-body">
    <p><%= post.body %></p>
  </section>

  <section class = "col-md-12 like-section">
    <a class="col-md-1" href = "#">Like</a>
    <a class="col-md-2" href = "#">Comment</a>
    <% if current_user_page(@user) %>
      <%= link_to "Delete", user_post_path(current_user, post), method: "delete", class: "col-md-1 pull-right", data: {confirm: "Are you sure you want to delete this post?"} %>
    <% end %>
  </section>
</article><!--post 1-->
