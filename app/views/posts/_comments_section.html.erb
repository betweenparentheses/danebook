<section class="col-md-12 comment-section">

  <% post.comments.each do |comment| %>
    <%= render partial: "single_comment", locals: {comment: comment} %>
  <% end %>





  <!--post a comment form -->
  <%= form_for [@user, post, post.comments.build], class: "col-md-12" do |f| %>
    <div class="form-group">
      <%= f.text_area :body, class: "form-control", rows: "4", placeholder: "Write a comment..." %>
    </div>
    <div class="form-group">
      <a class="col-md-1" href="#">Cancel</a>
      <%= f.submit "Post Comment", class: "comment-button col-md-3 pull-right btn btn-default"%>
    </div>
  <% end %>
</section>